<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background_dark"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_sleep_moon"
                android:layout_marginBottom="16dp"
                android:tint="#A78BFA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수면 관리"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#E5E7EB"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건강한 수면 습관을 만들어보세요"
                android:textSize="16sp"
                android:textColor="#9CA3AF"
                android:gravity="center" />
        </LinearLayout>

        <!-- 현재 취침 시간 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1F2937">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bedtime"
                        android:tint="#A78BFA"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="현재 취침 시간"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E5E7EB" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnPickCurrentBed"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="시간 선택 (예: 01:30)"
                    android:textSize="16sp"
                    android:background="@drawable/button_outline"
                    android:textColor="#A78BFA"
                    android:elevation="0dp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 목표 기상 시간 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1F2937">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_alarm"
                        android:tint="#FBBF24"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="목표 기상 시간"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E5E7EB" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnPickTargetWake"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="시간 선택 (예: 07:00)"
                    android:textSize="16sp"
                    android:background="@drawable/button_outline_orange"
                    android:textColor="#FBBF24"
                    android:elevation="0dp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 목표 수면 시간 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1F2937">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_timer"
                        android:tint="#34D399"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="목표 수면 시간"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E5E7EB" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnPickSleepDur"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="시간 선택 (예: 07:30)"
                    android:textSize="16sp"
                    android:background="@drawable/button_outline_green"
                    android:textColor="#34D399"
                    android:elevation="0dp"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 계산 결과 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#111827">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계산된 목표 취침 시간"
                    android:textSize="16sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvComputedTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#A78BFA" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 30분씩 당기는 알람 시작 -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="30분씩 당기는 알람 시작"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient"
            android:layout_marginBottom="12dp"
            android:elevation="8dp" />

        <!-- ✅ 지금 당장 수면 시작 버튼 -->
        <Button
            android:id="@+id/btnSleepNow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="지금 바로 수면 시작"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient"
            android:layout_marginBottom="20dp"
            android:elevation="6dp" />

        <!-- 다음 알람 정보 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#111827">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_notification"
                    android:tint="#9CA3AF"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다음 알람"
                        android:textSize="14sp"
                        android:textColor="#9CA3AF"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNextAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="설정되지 않음"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E5E7EB" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
