<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="24dp">

    <!-- Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_primary"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_primary"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_primary"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_primary"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/indicator_inactive"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/indicator_inactive" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잠은 하루에 몇 시간 정도 자는게 좋을까요?"
        android:textSize="24sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/maplestory_light"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="48dp" />

    <!-- Time Selection Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선호 수면시간"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/maplestory_light"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSelectTime"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="08:00"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/survey_time_button"
            android:fontFamily="@font/maplestory_light"
            android:layout_marginBottom="16dp"/>
        <!-- ⭐ 수면 사이클 안내 추가 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/info_box_background"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:layout_marginEnd="12dp"
                android:contentDescription="정보" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💡 수면 사이클 TIP"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/maplestory_light"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="숙면을 위해 1시간 30분 단위로 수면하는 것을 추천드려요!\n(예: 6시간, 7시간 30분, 9시간)"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/maplestory_light"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:background="@drawable/button_prim"
            android:fontFamily="@font/maplestory_light"
            android:text="이전"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:background="@drawable/button_prim"
            android:fontFamily="@font/maplestory_light"
            android:text="다음"
            android:textColor="@color/text_white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>