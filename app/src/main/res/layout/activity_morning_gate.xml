<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_background_dark"
    android:orientation="vertical" android:padding="20dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text="Good Morning!" android:textSize="24sp" android:textColor="#E5E7EB"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="오늘의 가장 중요한 일" android:textColor="#9CA3AF"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
    <EditText android:id="@+id/etTask"
        android:textColor="#E5E7EB" android:textColorHint="#9CA3AF"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnToReport" android:text="일간 리포트로"
        android:textColor="#FFFFFF" android:background="@drawable/button_gradient"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
