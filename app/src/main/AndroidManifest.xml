<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Android 13+ 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Android 12+ 정확 알람 -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <!-- 부팅 완료 브로드캐스트 수신 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SleepShift">

        <!-- 런처: 스플래시 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".OnboardingActivity" />
        <activity android:name=".MainActivity" />

        <!-- 수면 잠금 화면 -->
        <activity
            android:name=".LockScreenActivity"
            android:exported="false"
            android:showOnLockScreen="true" />

        <!-- 알람/액션/유예/부팅 -->
        <receiver
            android:name=".alarm.AlarmReceiver"
            android:exported="false" />
        <receiver
            android:name=".alarm.ActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.sleepshift.ACTION_DONE" />
                <action android:name="com.example.sleepshift.ACTION_SKIP" />
                <action android:name="com.example.sleepshift.ACTION_SLEEP_NOW" />
                <action android:name="com.example.sleepshift.ACTION_NOT_YET" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".alarm.GraceReceiver"
            android:exported="false" />
        <receiver
            android:name=".alarm.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>
