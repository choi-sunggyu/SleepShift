<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_background_dark"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical" android:padding="20dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:text="초기 설정" android:textSize="24sp" android:textColor="#E5E7EB"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="12dp" android:background="#111827"
            android:layout_marginTop="12dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="12dp">

            <TextView android:text="평균 취침 시간" android:textColor="#9CA3AF"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/etAvgBed" android:inputType="time"
                android:textColor="#E5E7EB" android:textColorHint="#9CA3AF"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:text="평균 기상 시간" android:textColor="#9CA3AF"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            <EditText android:id="@+id/etAvgWake" android:inputType="time"
                android:textColor="#E5E7EB" android:textColorHint="#9CA3AF"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:text="목표 기상 시간" android:textColor="#9CA3AF"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            <EditText android:id="@+id/etGoalWake" android:inputType="time"
                android:textColor="#E5E7EB" android:textColorHint="#9CA3AF"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:text="목표 수면 시간" android:textColor="#9CA3AF"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            <EditText android:id="@+id/etGoalSleep" android:inputType="time"
                android:textColor="#E5E7EB" android:textColorHint="#9CA3AF"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:id="@+id/tvAvgDuration" android:textColor="#9CA3AF"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <TextView android:id="@+id/tvTargetBedtime" android:textColor="#9CA3AF"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>

            <TextView android:text="아침 목표" android:textColor="#9CA3AF"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            <EditText android:id="@+id/etMorningGoal"
                android:textColor="#E5E7EB" android:textColorHint="#9CA3AF"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:text="습관 변경 이유" android:textColor="#9CA3AF"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            <EditText android:id="@+id/etReason"
                android:textColor="#E5E7EB" android:textColorHint="#9CA3AF"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button android:id="@+id/btnStartJourney" android:text="Start Journey"
            android:textColor="#FFFFFF" android:background="@drawable/button_gradient"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
