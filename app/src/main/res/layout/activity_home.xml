<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 헤더 (고정) -->
    <RelativeLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:padding="12dp">

        <!-- Day 카운트와 Dozee -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestory_light"
                android:text="Day 1"
                android:textColor="#2D3748"
                android:textSize="50sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Dozeo"
                android:fontFamily="@font/maplestory_light"
                android:textColor="#718096"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 우상단 아이콘들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 발바닥 코인 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="#F7FAFC"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imgPawCoin"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_paw_coin"
                        android:contentDescription="@string/desc_paw_coin"/>

                    <TextView
                        android:id="@+id/tvPawCoinCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/maplestory_light"
                        android:text="130"
                        android:textColor="#2D3748"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 설정 버튼 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="#F7FAFC"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="@string/desc_settings"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <!-- 팬더 이미지 섹션 (화면 중앙 고정) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pandaCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomSection"
        android:layout_below="@id/headerSection"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/pandaContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- 배경 이미지 (먼저 배치 = 뒤에 있음) -->
            <ImageView
                android:id="@+id/imgPandaBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/background_image"
                android:contentDescription="@string/desc_panda_background" />

            <!-- 팬더 이미지 (나중에 배치 = 위에 있음) -->
            <ImageView
                android:id="@+id/imgPanda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc_panda_image"
                android:scaleType="centerInside"
                android:src="@drawable/panda_meditation" />

            <!-- 이동하는 오늘의 취침시간 표시 -->
            <LinearLayout
                android:id="@+id/bedtimeFloatingBubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bedtime_bubble_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 취침시간"
                    android:fontFamily="@font/maplestory_light"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvBedtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maplestory_light"
                    android:text="12:30"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- 하단 섹션 -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_section_background"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <!-- 버튼 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- 자러가기 버튼 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/btnGoToBed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/maplestory_light"
                        android:text="자러가기"
                        android:gravity="center"
                        android:textColor="#2D3748"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/maplestory_light"
                        android:text="Go to bed"
                        android:textColor="#718096"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 달력 버튼 -->
            <ImageView
                android:id="@+id/btnCalendar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar"
                android:contentDescription="@string/desc_calendar"/>
        </LinearLayout>

        <!-- 경험치 바 (점들로 표시) - 3개만 사용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 연속 성공 점 3개 -->
            <View
                android:id="@+id/progressDot1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/progress_dot_inactive" />

            <View
                android:id="@+id/progressDot2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/progress_dot_inactive" />

            <View
                android:id="@+id/progressDot3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/progress_dot_inactive" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>