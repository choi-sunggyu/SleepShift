<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 메인 컨텐츠 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomSection"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 상단 헤더 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <!-- Day 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:text="Day 1"
                        android:textSize="28sp"
                        android:textColor="#2D3748"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Dozee"
                        android:textSize="14sp"
                        android:textColor="#718096"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- 우상단 아이콘들 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 하트 아이콘과 숫자 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/heart_background"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/btnHeart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_heart"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:text="130"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- 설정 아이콘 -->
                    <ImageView
                        android:id="@+id/btnSettings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_settings"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- 팬더 이미지 섹션 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardBackgroundColor="#F7FAFC"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- 팬더 이미지 -->
                    <ImageView
                        android:id="@+id/imgPanda"
                        android:layout_width="297dp"
                        android:layout_height="260dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/panda_meditation" />

                    <!-- 오늘의 취침시간 표시 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/time_bubble_background"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:text="오늘의 취침시간"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvAlarmTime"
                            android:text="12:30"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 섹션 -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_section_background"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 버튼 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- 자러가기 버튼 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/btnGoToBed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="12dp">

                    <!-- 그라데이션 원형 버튼 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="자러가기"
                        android:textColor="#2D3748"
                        android:textSize="26sp" />

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/gradient_circle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 달력 버튼 -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <ImageView
                    android:id="@+id/btnCalendar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendar"
                    android:background="?android:attr/selectableItemBackgroundBorderless" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- 경험치 바 (3일 기준) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Day 1 점 -->
            <View
                android:id="@+id/day1Dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/progress_dot_active" />

            <!-- Day 2 점 -->
            <View
                android:id="@+id/day2Dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/progress_dot_inactive" />

            <!-- Day 3 점 -->
            <View
                android:id="@+id/day3Dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/progress_dot_inactive" />

            <!-- 연결선들 -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/progress_line" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>