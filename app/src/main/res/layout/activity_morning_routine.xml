<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 제목 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모닝 루틴"
                    android:textSize="24sp"
                    android:textColor="#2D3748"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="with Dozeo"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 코인 표시 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/coin_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_paw_coin"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvCoinCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130"
                    android:textSize="16sp"
                    android:textColor="#2D3748"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- 설정 버튼 -->
            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </LinearLayout>
    </LinearLayout>

    <!-- 루틴 리스트 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/headerSection"
        android:layout_above="@id/bottomSection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 루틴 1: 물 한 잔 마시기 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/routineCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- 아이콘 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E0E7FF">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:padding="16dp"
                            android:src="@drawable/ic_water" />
                    </androidx.cardview.widget.CardView>

                    <!-- 텍스트 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="물 한 잔 마시기"
                            android:textSize="18sp"
                            android:textColor="#2D3748"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아침에 물한잔은는 밤새 잃은 수분을\n보충하고 몸과 뇌를 깨워줘요"
                            android:textSize="13sp"
                            android:textColor="#718096"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/tvRoutine1Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="터치시"
                            android:textSize="12sp"
                            android:textColor="#A0AEC0"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 루틴 2: 햇빛 보기 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/routineCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FEF3C7">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_sun"
                            android:padding="16dp"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="햇빛 보기"
                            android:textSize="18sp"
                            android:textColor="#2D3748"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아침 햇빛은 생체리듬을 조절하고 \n비타민 D합성과 기분 개선에 도움을 줘요"
                            android:textSize="13sp"
                            android:textColor="#718096"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/tvRoutine2Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="터치시"
                            android:textSize="12sp"
                            android:textColor="#A0AEC0"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 루틴 3: 오늘 꿈 쓰기 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/routineCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#DDD6FE">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_notebook"
                            android:padding="16dp"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오늘 꼭 할 것"
                            android:textSize="18sp"
                            android:textColor="#2D3748"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오늘 하루의 가장 중요한\n한 가지를 떠올리거나 적어보아요"
                            android:textSize="13sp"
                            android:textColor="#718096"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/tvRoutine3Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="터치시"
                            android:textSize="12sp"
                            android:textColor="#A0AEC0"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 잠금 해제 영역 -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- 타이머 표시 -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180s"
            android:textSize="48sp"
            android:textColor="#6366F1"
            android:fontFamily="sans-serif-bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 잠금 해제 버튼 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E0E7FF">

            <TextView
                android:id="@+id/btnUnlock"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="잠금 해제하기"
                android:textSize="18sp"
                android:textColor="#4C51BF"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>