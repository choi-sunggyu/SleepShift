<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- 상단 헤더 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/maplestory_bold"
            android:text="설정"
            android:textColor="#2D3748"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- 설정 내용 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ⭐ 알람 모드 선택 섹션 (NEW) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FEF3C7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/maplestory_bold"
                        android:text="알람 모드"
                        android:textColor="#2D3748"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="점진적 조정 또는 즉시 적용 중 선택하세요"
                        android:fontFamily="@font/maplestory_bold"
                        android:textColor="#92400E"
                        android:textSize="14sp" />

                    <!-- 커스텀 모드 (20분씩 조정) -->
                    <RadioGroup
                        android:id="@+id/radioGroupAlarmMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioCustomMode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:checked="true"
                            android:paddingStart="8dp"
                            android:text="커스텀 모드 (추천)"
                            android:textColor="#2D3748"
                            android:textSize="15sp"
                            android:fontFamily="@font/maplestory_bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginBottom="16dp"
                            android:text="• 20분씩 점진적으로 조정\n• 알람 시간 변경 불가\n• 신체 리듬 적응에 최적화"
                            android:textColor="#718096"
                            android:textSize="13sp"
                            android:fontFamily="@font/maplestory_bold"/>

                        <RadioButton
                            android:id="@+id/radioNormalMode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:paddingStart="8dp"
                            android:text="일반 모드"
                            android:textColor="#2D3748"
                            android:textSize="15sp"
                            android:fontFamily="@font/maplestory_bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:text="• 목표 시간으로 즉시 적용\n• 취침/기상 시간 자유롭게 변경 가능"
                            android:textColor="#718096"
                            android:textSize="13sp"
                            android:fontFamily="@font/maplestory_bold"/>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 취침 시간 설정 섹션 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBedtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/maplestory_bold"
                        android:text="평균 취침 시간"
                        android:textColor="#2D3748"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="평소 잠자리에 드는 시간을 설정하세요"
                        android:textColor="#718096"
                        android:textSize="14sp"
                        android:fontFamily="@font/maplestory_bold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvCurrentBedtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/maplestory_bold"
                            android:text="23:00"
                            android:textColor="#2D3748"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btnSetBedtime"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/button_primary"
                            android:fontFamily="@font/maplestory_bold"
                            android:text="변경"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 목표 기상 시간 설정 섹션 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTargetWakeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/maplestory_bold"
                        android:text="목표 기상 시간"
                        android:textColor="#2D3748"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="최종적으로 일어나고 싶은 시간을 설정하세요"
                        android:textColor="#718096"
                        android:textSize="14sp"
                        android:fontFamily="@font/maplestory_bold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTargetWakeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/maplestory_bold"
                            android:text="07:00"
                            android:textColor="#2D3748"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btnSetTargetWakeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/button_primary"
                            android:fontFamily="@font/maplestory_bold"
                            android:text="변경"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 오늘의 알람 시간 (읽기 전용) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F0F9FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/maplestory_bold"
                        android:text="오늘의 알람 시간"
                        android:textColor="#2D3748"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAlarmModeDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="점진적 조정이 반영된 오늘의 실제 알람 시간입니다"
                        android:textColor="#0369A1"
                        android:textSize="14sp"
                        android:fontFamily="@font/maplestory_bold"/>

                    <TextView
                        android:id="@+id/tvCurrentAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/maplestory_bold"
                        android:text="07:00 (Day 1)"
                        android:textColor="#0369A1"
                        android:textSize="24sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 기타 설정들 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/maplestory_bold"
                        android:text="기타 설정"
                        android:textColor="#2D3748"
                        android:textSize="16sp" />

                    <!-- 취침 알림 설정 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="취침 알림 (10분 전)"
                            android:textColor="#2D3748"
                            android:textSize="14sp"
                            android:fontFamily="@font/maplestory_bold"/>

                        <Switch
                            android:id="@+id/switchBedtimeNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:checked="true" />
                    </RelativeLayout>

                    <!-- 알림 설정 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="알람 알림 허용"
                            android:textColor="#2D3748"
                            android:textSize="14sp"
                            android:fontFamily="@font/maplestory_bold"/>

                        <Switch
                            android:id="@+id/switchNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:checked="true" />
                    </RelativeLayout>

                    <!-- 진동 설정 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="진동"
                            android:textColor="#2D3748"
                            android:textSize="14sp"
                            android:fontFamily="@font/maplestory_bold"/>

                        <Switch
                            android:id="@+id/switchVibration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:checked="true" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 초기화 섹션 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FEE2E2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="데이터 초기화"
                        android:textColor="#991B1B"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="모든 설정과 데이터를 삭제하고 처음부터 다시 시작합니다"
                        android:textColor="#7F1D1D"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="앱 초기화"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:backgroundTint="#DC2626" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>