<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 메인 컨텐츠 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomSection"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 상단 헤더 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <!-- 나이트 루틴 제목 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:text="나이트 루틴"
                        android:textSize="28sp"
                        android:textColor="#2D3748"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="with Dozeo"
                        android:textSize="14sp"
                        android:textColor="#718096"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- 우상단 아이콘들 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 발바닥 코인 카드 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F7FAFC">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp">

                            <!-- 발바닥 코인 원형 배경 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#8B5FBF"
                                android:layout_marginEnd="10dp">

                                <ImageView
                                    android:id="@+id/imgPawCoin"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_paw_coin"
                                    />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tvPawCoinCount"
                                android:text="130"
                                android:textSize="18sp"
                                android:textColor="#2D3748"
                                android:fontFamily="sans-serif-bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 설정 버튼 카드 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F7FAFC">

                        <ImageView
                            android:id="@+id/btnSettings"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_settings"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:tint="#2D3748" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>

            <!-- 오늘의 기분 섹션 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardBackgroundColor="#F0F0F0"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp">

                    <!-- 오늘의 기분 제목 -->
                    <TextView
                        android:id="@+id/tvMoodTitle"
                        android:text="오늘의 기분"
                        android:textSize="20sp"
                        android:textColor="#2D3748"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- 팬더 얼굴 슬라이드 -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerMood"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tvMoodTitle"
                        android:layout_marginTop="20dp" />

                    <!-- 감정 이름 표시 -->
                    <TextView
                        android:id="@+id/tvSelectedMood"
                        android:text="기쁨"
                        android:textSize="16sp"
                        android:textColor="#2D3748"
                        android:fontFamily="sans-serif-medium"
                        android:layout_below="@id/viewPagerMood"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- 슬라이드 인디케이터 -->
                    <LinearLayout
                        android:id="@+id/indicatorLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvSelectedMood"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- 알람 시간 섹션 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <RelativeLayout
                    android:id="@+id/alarmTimeSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:text="알람 시간"
                        android:textSize="16sp"
                        android:textColor="#2D3748"
                        android:fontFamily="sans-serif-medium"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvAlarmTime"
                        android:text="07:00"
                        android:textSize="16sp"
                        android:textColor="#718096"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="오늘 밤에만 알람 시간을 바꿀 수 있습니다"
                        android:textSize="12sp"
                        android:textColor="#A0AEC0"
                        android:layout_below="@id/tvAlarmTime"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 수면 체크인 버튼 -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_section_background"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 수면 체크인 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/btnSleepCheckIn"
                    android:layout_width="364dp"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="16dp">

                    <!-- 발바닥 코인 아이콘 -->

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="수면 체크인"
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_paw_coin" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>