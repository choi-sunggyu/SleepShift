<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lock_screen_background">

    <!-- 상단 메시지 영역 -->
    <LinearLayout
        android:id="@+id/topMessageSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp">

        <!-- 성규님 잘자요! -->
        <TextView
            android:id="@+id/tvGoodNightMessage"
            android:text="성규님 잘자요!"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="B에서 깨어날게요"
            android:textSize="16sp"
            android:textColor="#E2E8F0"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- 발바닥 코인 표시 -->
    <LinearLayout
        android:id="@+id/coinSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topMessageSection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/coin_section_background"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_paw_coin"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvCoinCount"
            android:text="3"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- 중앙 팬더 이미지 영역 (배경 이미지에 포함될 예정) -->
    <View
        android:id="@+id/pandaImagePlaceholder"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp" />

    <!-- 하단 잠금 해제 버튼 -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp">

        <!-- 3초 카운트다운 표시 -->
        <LinearLayout
            android:id="@+id/countdownSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <!-- 카운트다운 숫자 -->
            <TextView
                android:id="@+id/tvCountdown"
                android:text="3"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="길게 눌러서 잠금 해제"
                android:textSize="14sp"
                android:textColor="#E2E8F0"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 잠금 해제 버튼 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:id="@+id/btnUnlock"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:paddingHorizontal="40dp">

                <!-- 자물쇠 아이콘 -->
                <ImageView
                    android:id="@+id/imgLockIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_lock"
                    android:layout_marginEnd="12dp"
                    android:tint="#2D3748" />

                <TextView
                    android:id="@+id/tvUnlockText"
                    android:text="잠금해제"
                    android:textSize="18sp"
                    android:textColor="#2D3748"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 안내 메시지 -->
        <TextView
            android:id="@+id/tvUnlockHint"
            android:text="3초간 길게 눌러서 잠금 해제하세요"
            android:textSize="14sp"
            android:textColor="#A0AEC0"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>