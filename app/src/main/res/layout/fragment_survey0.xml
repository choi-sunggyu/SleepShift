<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="24dp">

    <!-- Progress Bar (6개로 증가) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_primary"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/indicator_inactive"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/indicator_inactive"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/indicator_inactive"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/indicator_inactive"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/indicator_inactive" />
    </LinearLayout>

    <!-- Welcome Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다! 🌙"
        android:textSize="32sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/maplestory_bold"
        android:layout_marginBottom="12dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maplestory_bold"
        android:text="수면 습관 개선을 시작하기 전에\n이름을 알려주세요"
        android:textSize="20sp"
        android:textColor="@color/text_secondary"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="48dp" />

    <!-- Name Input Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maplestory_bold"
        android:text="이름 또는 닉네임"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="@color/button_primary"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/maplestory_bold"
            android:hint="예: 홍길동"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_primary"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maplestory_light"
        android:text="앱에서 'OO님'으로 표시됩니다"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:lineSpacingExtra="4dp" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="다음"
        android:textSize="18sp"
        android:textColor="@color/text_white"
        android:background="@drawable/button_prim"
        android:fontFamily="@font/maplestory_bold"/>

</LinearLayout>