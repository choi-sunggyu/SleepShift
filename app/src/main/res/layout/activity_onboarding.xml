<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_dark">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="왜 이 어플을 사용하시나요?"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#E5E7EB"/>

        <RadioGroup
            android:id="@+id/rgReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/rbReason1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="스스로 억제할 수 없어서" android:textColor="#E5E7EB"/>
            <RadioButton android:id="@+id/rbReason2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="나이트 루틴을 만들어보고 싶어서" android:textColor="#E5E7EB"/>
            <RadioButton android:id="@+id/rbReason3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="건강하게 살고 싶어서" android:textColor="#E5E7EB"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자기 전에 뭐하시나요? (간단히)"
            android:textColor="#CBD5E1"/>
        <EditText
            android:id="@+id/etBeforeBed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E5E7EB"
            android:textColorHint="#9CA3AF"
            android:hint="예: 유튜브 1시간, SNS 30분"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰 이외엔 몇시에 잠드나요?"
            android:textColor="#CBD5E1"/>
        <EditText
            android:id="@+id/etSleepTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#E5E7EB"
            android:textColorHint="#9CA3AF"
            android:hint="예: 01:30"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient"/>
    </LinearLayout>
</ScrollView>
