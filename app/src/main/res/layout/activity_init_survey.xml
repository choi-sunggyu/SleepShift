<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background_dark">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기 설정"
            android:textColor="#E5E7EB"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="12dp"/>

        <!-- 평균 취침 시간 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#111827"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평균 취침 시간"
                    android:textColor="#9CA3AF"/>

                <Button
                    android:id="@+id/btnAvgBed"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:text="선택 (기본 04:00)"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_gradient"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 평균 기상 시간 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#111827"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평균 기상 시간"
                    android:textColor="#9CA3AF"/>

                <Button
                    android:id="@+id/btnAvgWake"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:text="선택 (기본 13:00)"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_gradient"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 목표 기상 시간 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#111827"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 기상 시간"
                    android:textColor="#9CA3AF"/>

                <Button
                    android:id="@+id/btnGoalWake"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:text="선택 (기본 07:00)"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_gradient"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 목표 수면 시간 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#111827"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 수면 시간"
                    android:textColor="#9CA3AF"/>

                <Button
                    android:id="@+id/btnGoalSleepDur"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:text="선택 (기본 08:00)"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_gradient"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 실시간 피드백 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#0B1220"
            app:cardElevation="0dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAvgSleepNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="현재 평균 수면 시간: -"
                    android:textColor="#D1D5DB"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvComputedTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="계산된 목표 취침 시간: -"
                    android:textColor="#A78BFA"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnStartJourney"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Journey"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_gradient"/>
    </LinearLayout>
</ScrollView>
